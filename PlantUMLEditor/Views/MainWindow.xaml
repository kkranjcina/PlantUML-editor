<Window x:Class="PlantUMLEditor.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PlantUMLEditor"
        mc:Ignorable="d"
        Title="PlantUML Editor" Height="720" Width="1380" WindowStartupLocation="CenterScreen">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="400" />
        </Grid.ColumnDefinitions>

        <!-- Prostor za prikaz dijagrama -->
        <Border Grid.Column="0" BorderBrush="{StaticResource BorderBrushColor}" BorderThickness="1" Height="600" VerticalAlignment="Top" Margin="5,5,5,0">
            <ScrollViewer x:Name="DiagramScrollViewer"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto"
                          PreviewMouseWheel="DiagramImage_MouseWheel">
                <Grid>
                    <Image x:Name="DiagramImage"
                           RenderTransformOrigin="0.5,0.5"
                           Stretch="None"
                           PreviewMouseLeftButtonDown="DiagramImage_PreviewMouseLeftButtonDown"
                           PreviewMouseMove="DiagramImage_PreviewMouseMove"
                           PreviewMouseLeftButtonUp="DiagramImage_PreviewMouseLeftButtonUp">
                        <Image.RenderTransform>
                            <ScaleTransform x:Name="DiagramImageScale" ScaleX="1" ScaleY="1"/>
                        </Image.RenderTransform>
                    </Image>
                </Grid>
            </ScrollViewer>
        </Border>

        <StackPanel Orientation="Horizontal" Margin="0,10,30,30" HorizontalAlignment="Right" VerticalAlignment="Bottom">
            <TextBlock Text="Izvoz dijagrama:" VerticalAlignment="Center" Margin="0,0,10,5"/>
            <ComboBox x:Name="cmbExportFormat" Width="120" SelectedIndex="0">
                <ComboBoxItem Content="PNG"/>
                <ComboBoxItem Content="SVG"/>
                <ComboBoxItem Content="PDF"/>
                <ComboBoxItem Content="EPS"/>
                <ComboBoxItem Content="TXT"/>
            </ComboBox>
            <Button x:Name="btnExport" Content="Izvoz" Margin="10,0,0,0" Width="60" Height="25" Click="ExportDiagram_Click"/>
        </StackPanel>

        <GridSplitter Grid.Column="1" Background="{StaticResource BorderBrushColor}"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Width="5"/>

        <!-- Bočni panel -->
        <StackPanel Grid.Column="2" Margin="10">
            <TabControl>
                <TabItem Header="Ručno kreiranje">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Text="Unesite PlantUML kod:" Grid.Row="0" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtPlantUmlCode" AcceptsReturn="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" MaxHeight="300"
                                 Grid.Row="1" Margin="0,0,0,10"/>

                        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Odaberite predložak:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        </StackPanel>
                        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,10" VerticalAlignment="Center">
                            <ComboBox x:Name="cmbDiagramType" Width="158" Height="25" SelectionChanged="DiagramType_SelectionChanged"/>
                            <Button Content="Dodaj" Width="55" Height="25" Margin="5,0,0,0" ToolTip="Dodaj novi predložak" Click="AddTemplate_Click"/>
                            <Button Content="Uredi" Width="55" Height="25" Margin="5,0,0,0" ToolTip="Uredi predložak" Click="EditTemplate_Click"/>
                            <Button Content="Ukloni" Width="55" Height="25" Margin="5,0,0,0" ToolTip="Ukloni predložak" Click="RemoveTemplate_Click"/>
                        </StackPanel>

                        <Button x:Name="btnGenerateDiagram" Content="Generiraj dijagram" Grid.Row="4" Width="150" Height="25" HorizontalAlignment="Right" Click="GenerateDiagram_Click"/>
                    </Grid>
                </TabItem>

                <TabItem Header="ChatGPT">
                    <StackPanel Margin="10">
                        <TextBlock Text="Upit za ChatGPT:" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtChatInput" AcceptsReturn="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" MaxHeight="300"/>

                        <Button x:Name="btnSendQuery" Content="Pošalji upit" Margin="0,10,0,0" Width="100" Height="25" HorizontalAlignment="Right" Click="SendChatGPTQuery_Click"/>

                        <TextBlock Text="Odgovor ChatGPT-a:" Margin="0,20,0,5" FontWeight="Bold"/>
                        <TextBox x:Name="txtChatResponse" AcceptsReturn="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" IsReadOnly="True" MaxHeight="300"/>
                    </StackPanel>
                </TabItem>

                <TabItem Header="Postavke">
                    <StackPanel Margin="10">
                        <TextBlock Text="OpenAI API ključ:" Margin="0,10,0,5"/>
                        <PasswordBox x:Name="txtApiKey" Margin="0,0,0,10"/>
                        <Button Content="Spremi API ključ" Width="140" Height="25" HorizontalAlignment="Right" Click="SaveApiKey_Click"/>
                        <TextBlock x:Name="txtApiKeyStatus" Margin="0,10,0,0" Foreground="Green" Visibility="Collapsed"/>
                    </StackPanel>
                </TabItem>
            </TabControl>
        </StackPanel>

        <!-- Status notifikacija -->
        <Border x:Name="statusNotification"
                Visibility="Collapsed"
                Background="#333333"  
                BorderBrush="{StaticResource BorderBrushColor}" 
                BorderThickness="1" 
                CornerRadius="8"
                Padding="12,8"
                HorizontalAlignment="Center" 
                VerticalAlignment="Bottom"
                Margin="0,0,0,20"
                Panel.ZIndex="1000">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Canvas x:Name="spinnerCanvas" Width="20" Height="20" Margin="0,0,10,0">
                    <Ellipse Width="20" Height="20" StrokeThickness="3">
                        <Ellipse.Stroke>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#3498db" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="0.7"/>
                            </LinearGradientBrush>
                        </Ellipse.Stroke>
                        <Ellipse.RenderTransform>
                            <RotateTransform x:Name="spinnerRotation" CenterX="10" CenterY="10" Angle="0"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                </Canvas>

                <TextBlock x:Name="statusText"
                           Grid.Column="1"
                           Text="Izvoz u tijeku..."
                           Foreground="White"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
